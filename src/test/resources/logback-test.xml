<configuration debug="true">

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%gray([%d{HH:mm:ss.SSS}]) [%thread] %highlight(%-5level) %cyan(%logger{36}) -%kvp- %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

    <logger name="com.horn" level="DEBUG"/>

</configuration>